# PostgreSQL in Docker (local development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/utm_connect"

# PgAdmin (DB web UI)
PGADMIN_EMAIL="admin@example.com"
PGADMIN_PASSWORD="admin"

# Node.js app
NODE_ENV="development"
PORT=3000
CORS_ORIGIN="http://localhost:8080"

# JWT tokens - CHANGE IN PRODUCTION!
JWT_SECRET="super-secret-key-min-32-characters-long-change-this"
JWT_REFRESH_SECRET="different-secret-key-min-32-characters-change-this"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Password requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Database variables (used in docker-compose.yml)
DB_USER="postgres"
DB_PASSWORD="postgres"
DB_NAME="utm_connect"
